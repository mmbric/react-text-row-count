{
  "name": "react-text-row-count",
  "version": "0.1.2",
  "description": "React helper that adds a data-row-count attribute based on measured text rows.",
  "keywords": [
    "react",
    "rows",
    "line-count",
    "row-count",
    "typography",
    "measurement",
    "attribute",
    "data-attribute"
  ],
  "author": "mmbric",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmbric/react-text-row-count.git"
  },
  "homepage": "https://github.com/mmbric/react-text-row-count#readme",
  "bugs": {
    "url": "https://github.com/mmbric/react-text-row-count/issues"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=17 || >=18 || >=19"
  },
  "devDependencies": {
    "@types/react": "^19.1.10",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
